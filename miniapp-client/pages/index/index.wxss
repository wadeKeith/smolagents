.page {
  padding: 48rpx 36rpx 80rpx;
  box-sizing: border-box;
  background: radial-gradient(circle at top, #fefefe 0%, #e9ecf4 45%, #dae0ee 100%);
}

.card {
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(15, 23, 42, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.glass {
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(40rpx);
}

.translucent {
  background: rgba(255, 255, 255, 0.82);
  backdrop-filter: blur(30rpx);
}

.solid {
  background: #fdfdfe;
}

.hero-pill {
  display: inline-flex;
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.08);
  color: #0f172a;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.hero-title {
  margin-top: 24rpx;
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: -1rpx;
  color: #0f172a;
}

.hero-desc {
  margin-top: 12rpx;
  color: #4b5563;
  font-size: 28rpx;
  line-height: 1.5;
}

.hero-tech {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hero-tech-item {
  color: #1f2937;
  font-size: 24rpx;
}

.hero-base {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #059669;
}

.section {
  margin-top: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #0f172a;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.plan-item {
  border-radius: 28rpx;
  padding: 28rpx;
  background: rgba(248, 250, 255, 0.92);
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.plan-item.active {
  border-color: #0f172a;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.18);
  transform: translateY(-4rpx);
}

.plan-pill {
  display: inline-flex;
  padding: 6rpx 20rpx;
  margin-bottom: 16rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.08);
  font-size: 22rpx;
  color: #0f172a;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.plan-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #0f172a;
}

.plan-price {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
}

.plan-tagline {
  margin-top: 8rpx;
  color: #4b5563;
  font-size: 26rpx;
}

.plan-feature {
  display: block;
  margin-top: 10rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item.half {
  flex: 1;
}

.form-item input {
  padding: 20rpx 24rpx;
  border-radius: 26rpx;
  background: #f4f5fb;
  border: 2rpx solid transparent;
}

.form-item input:focus-within {
  border-color: #0f172a;
}

.picker-value {
  padding: 20rpx 24rpx;
  border-radius: 26rpx;
  background: #f4f5fb;
}

.pricing-summary {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #4b5563;
}

.summary-price {
  font-size: 44rpx;
  font-weight: 700;
  color: #0f172a;
}

.submit-btn {
  margin-top: 32rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #0f172a, #1f2937);
  color: #fff;
  border: none;
  letter-spacing: 1rpx;
}

.ghost-btn {
  margin-top: 24rpx;
  border: 2rpx solid #0f172a;
  border-radius: 999rpx;
  color: #0f172a;
  background: transparent;
}

.order-breakdown {
  margin-top: 16rpx;
  border-top: 1rpx solid rgba(15, 23, 42, 0.08);
}

.order-breakdown-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  color: #4b5563;
}
